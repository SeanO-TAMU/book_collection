<h1>Book Collection</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td>
          <%= link_to('Show', book_path(book)) %>
          <%= link_to('Edit', edit_book_path(book)) %>
          <%= link_to('Delete', delete_book_path(book)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="flash-messages">
  <% flash.each do |key, message| %>
    <div class="flash <%= key %>">
      <%= message %>
    </div>
  <% end %>
</div>

<%= link_to 'Add a Book', new_book_path %>